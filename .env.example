# Google Gemini API Key (Required)
# Get yours at: https://ai.google.dev/
GOOGLE_API_KEY=your_gemini_api_key_here

# LangSmith Tracing (Optional - for debugging)
# Get yours at: https://smith.langchain.com/
LANGSMITH_API_KEY=your_langsmith_api_key_here
LANGCHAIN_TRACING_V2=true
LANGCHAIN_PROJECT=TheologicalAgent

# Supabase PostgreSQL (Required for cache, audit, HITL)
DB_URL=postgresql://postgres:your_password@db.your_project.supabase.co:5432/postgres

# HITL Email Notification (Required for Human-in-the-Loop alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
HITL_REVIEWER_EMAIL=reviewer@example.com

# Backend Configuration (Optional)
# API_BASE_URL=http://localhost:8000

LEXICAL_GROUNDING_TIMEOUT_MS=4000
LEXICAL_GROUNDING_MAX_SOURCES=5
LEXICAL_GROUNDING_EXCLUDE_DOMAINS=reddit.com,wikipedia.org
GOOGLE_GENAI_USE_VERTEXAI=false
LEXICAL_ADK_AFC_MAX_REMOTE_CALLS=3
LEXICAL_ADK_MIN_REPORT_CHARS=300
